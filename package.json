{
  "name": "polkadot-nextjs-starter",
  "version": "1.0.0",
  "private": false,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "pnpm run generate:papi && next build",
    "start": "next start",
    "lint": "next lint",
    "generate:papi": "papi",
    "postinstall": "papi",
    "add-papi-demo-data": "pnpm papi add --skip-codegen -n paseo paseo && pnpm papi add --skip-codegen -n polkadot polkadot && pnpm papi add --skip-codegen -n paseo_asset_hub paseo_asset_hub && pnpm papi add --skip-codegen -n polkadot_asset_hub polkadot_asset_hub && pnpm papi"
  },
  "dependencies": {
    "@polkadot-api/descriptors": "file:.papi/descriptors",
    "@polkadot/react-identicon": "^3.15.3",
    "@radix-ui/react-dialog": "^1.1.13",
    "@radix-ui/react-dropdown-menu": "^2.1.14",
    "@radix-ui/react-separator": "^1.1.6",
    "@radix-ui/react-slot": "^1.2.2",
    "@radix-ui/react-tooltip": "^1.2.6",
    "@reactive-dot/core": "^0.44.0",
    "@reactive-dot/react": "^0.44.0",
    "@vercel/analytics": "^1.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "detect-browser": "^5.3.0",
    "framer-motion": "^12.10.0",
    "lucide-react": "^0.483.0",
    "next": "15.4.5",
    "next-themes": "^0.4.6",
    "polkadot-api": "^1.15.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "rxjs": "^7.8.2",
    "sonner": "^2.0.3",
    "tailwind-merge": "^3.2.0",
    "tw-animate-css": "^1.2.9"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@tailwindcss/postcss": "^4.1.5",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^20.17.43",
    "@types/react": "^19.1.3",
    "@types/react-dom": "^19.1.3",
    "eslint": "^9.26.0",
    "eslint-config-next": "15.2.3",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.1.5",
    "typescript": "^5.8.4"
  },
  "overrides": {
    "react-copy-to-clipboard": {
      "react": "$react",
      "react-dom": "$react-dom"
    },
    "@polkadot/react-identicon": {
      "react-copy-to-clipboard": {
        "react": "$react",
        "react-dom": "$react-dom"
      }
    }
  },
  "pnpm": {
    "overrides": {
      "react-copy-to-clipboard@*>react": "$react",
      "react-copy-to-clipboard@*>react-dom": "$react-dom",
      "typescript": "^5.8.4"
    }
  },
  "packageManager": "pnpm@9.15.3+sha512.1f79bc245a66eb0b07c5d4d83131240774642caaa86ef7d0434ab47c0d16f66b04e21e0c086eb61e62c77efc4d7f7ec071afad3796af64892fae66509173893a"
}
